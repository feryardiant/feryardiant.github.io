{
  "hosting": {
    "public": "public",
    "ignore": [
      "CNAME",
      "README.md",
      "firebase.json",
      "node_modules",
      "404.html",
      ".*"
    ],
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "/mail",
        "function": "mail"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },

  "functions": {
    "source": "src/functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "ignore": [
      "README.md",
      "node_modules",
      ".*"
    ]
  },

  "firestore": {
    "rules": "src/firestore.rules",
    "ignore": [
      "README.md",
      "node_modules",
      ".*"
    ]
  },

  "storage": {
    "rules": "src/storage.rules"
  }
}
