{
  "name": "feryardiant-id",
  "version": "0.2.0",
  "private": true,
  "author": {
    "email": "ferywardiyanto@gmail.com",
    "name": "Fery Wardiyanto"
  },
  "appConfig": {
    "name": "Personal Website",
    "description": "Yet another personal website"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=10"
  },
  "workspaces": [
    "firebase/*"
  ],
  "dependencies": {
    "axios": "^0.21",
    "bulma": "^0.9",
    "feather-icons": "^4.28",
    "qs": "^6.9",
    "register-service-worker": "^1.7",
    "vue": "^3.0",
    "vue-gtm": "^3.4",
    "vue-router": "^4.0.4",
    "vuex": "^4.0.0",
    "vuex-router-sync": "^6.0.0-rc.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0",
    "@feryardiant/commitlint-config": "~0.0.2",
    "@vue/compiler-sfc": "^3.0.7",
    "@vue/cli-plugin-babel": "^5.0.0-alpha.5",
    "@vue/cli-plugin-eslint": "^5.0.0-alpha.5",
    "@vue/cli-plugin-pwa": "^5.0.0-alpha.5",
    "@vue/cli-service": "^5.0.0-alpha.5",
    "@vue/eslint-config-standard": "^6.0",
    "babel-eslint": "^10.1",
    "core-js": "^3.6",
    "cross-env": "^7.0",
    "dotenv": "^8.2",
    "eslint": "^7.21",
    "eslint-plugin-import": "^2.20",
    "eslint-plugin-node": "^11.1",
    "eslint-plugin-promise": "^4.2",
    "eslint-plugin-standard": "^5.0",
    "eslint-plugin-vue": "^7.7",
    "glob": "^7.1",
    "husky": "^5.1.3",
    "imagemin-webpack-plugin": "^2.4",
    "pm2": "^4.5",
    "sass": "^1.28",
    "sass-loader": "^11.0",
    "stylelint": "^13.7",
    "stylelint-config-recommended-scss": "^4.2",
    "stylelint-scss": "^3.18.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e -V"
    }
  },
  "vuePlugins": {
    "service": [
      "src/build.plugin.js"
    ]
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "ignorePatterns": [
      "dist/",
      "node_modules/",
      "public/",
      "**.old"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-recommended-scss"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "commitlint": {
    "extends": [
      "@feryardiant/commitlint-config"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.vue": [
      "eslint --fix",
      "stylelint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  }
}
