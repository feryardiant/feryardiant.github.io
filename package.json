{
  "name": "@feryardiant/website",
  "version": "0.2.0",
  "private": true,
  "author": {
    "name": "Fery Wardiyanto",
    "email": "ferywardiyanto@gmail.com",
    "url": "https://feryardiant.id"
  },
  "license": "MIT",
  "packageManager": "pnpm@7.5.0",
  "engines": {
    "node": "14.x || 16.x"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-s build:ssg build:rss",
    "build:ssg": "cross-env NODE_ENV=production vite-ssg build",
    "build:rss": "node scripts/feed.mjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install scripts/husky"
  },
  "dependencies": {
    "@gtm-support/vue-gtm": "^1.6.0",
    "@vueuse/core": "^8.9.4",
    "@vueuse/head": "^0.7.6",
    "dayjs": "^1.11.4",
    "nprogress": "^0.2.0",
    "prism-theme-vars": "^0.2.4",
    "qs": "^6.11.0",
    "vue": "^3.2.37",
    "vue-i18n": "^9.1.10",
    "vue-router": "^4.1.2"
  },
  "devDependencies": {
    "@antfu/eslint-config-vue": "^0.25.2",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@fontsource/fira-code": "^4.5.10",
    "@fontsource/merriweather-sans": "^4.5.8",
    "@iconify/vue": "^3.2.1",
    "@intlify/vite-plugin-vue-i18n": "^5.0.0",
    "@types/markdown-it": "^12.2.3",
    "@types/markdown-it-link-attributes": "^3.0.1",
    "@types/node": "~16.11.45",
    "@types/nprogress": "^0.2.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/compiler-sfc": "^3.2.37",
    "@vue/server-renderer": "^3.2.37",
    "@vue/test-utils": "^2.0.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "eslint": "^8.20.0",
    "fast-glob": "^3.2.11",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "happy-dom": "^5.4.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.4",
    "markdown-it-link-attributes": "^4.0.0",
    "markdown-it-prism": "^2.2.4",
    "npm-run-all": "^4.1.5",
    "prismjs": "^1.28.0",
    "typescript": "^4.7.4",
    "unplugin-auto-import": "^0.9.4",
    "unplugin-vue-components": "^0.21.1",
    "vite": "^2.9.14",
    "vite-plugin-md": "^0.18.1",
    "vite-plugin-pages": "^0.25.0",
    "vite-plugin-vue-layouts": "^0.6.0",
    "vite-plugin-windicss": "^1.8.7",
    "vite-ssg": "^0.20.2",
    "vite-ssg-sitemap": "^0.3.1",
    "vitest": "^0.18.1",
    "vue-tsc": "^0.38.9",
    "windicss": "^3.5.6",
    "workbox-window": "^6.5.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@antfu/vue"
    ],
    "globals": {
      "vi": true,
      "vitest": true
    },
    "ignorePatterns": [
      "**/*.test.ts",
      "**/*.d.ts"
    ],
    "rules": {
      "vue/component-definition-name-casing": [
        "error",
        "kebab-case"
      ],
      "vue/html-self-closing": "off"
    }
  },
  "lint-staged": {
    "**/*.{mjs,js,vue}": [
      "eslint --fix"
    ]
  }
}
