{
  "name": "@feryardiant/website",
  "version": "0.2.0",
  "type": "module",
  "private": true,
  "author": {
    "name": "Fery Wardiyanto",
    "email": "ferywardiyanto@gmail.com",
    "url": "https://feryardiant.id"
  },
  "license": "MIT",
  "packageManager": "pnpm@8.5.0",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "build": "run-s build:ssg build:rss",
    "build:ssg": "cross-env NODE_ENV=production vite-ssg build",
    "build:rss": "node scripts/feed.mjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install scripts/husky"
  },
  "dependencies": {
    "dayjs": "^1.11.9",
    "nprogress": "^0.2.0",
    "prism-theme-vars": "^0.2.4",
    "qs": "^6.11.2",
    "vue": "^3.3.4",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@creasico/eslint-config": "^0.0.1",
    "@fontsource/fira-code": "^5.0.8",
    "@fontsource/merriweather-sans": "^5.0.8",
    "@gtm-support/vue-gtm": "^2.1.0",
    "@iconify/vue": "^4.1.1",
    "@intlify/unplugin-vue-i18n": "^0.12.2",
    "@types/markdown-it": "^12.2.3",
    "@types/markdown-it-link-attributes": "^3.0.1",
    "@types/node": "^20.4.8",
    "@types/nprogress": "^0.2.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/compiler-sfc": "^3.3.4",
    "@vue/server-renderer": "^3.3.4",
    "@vue/test-utils": "^2.4.1",
    "@vueuse/core": "^10.3.0",
    "@vueuse/head": "^1.1.26",
    "@yankeeinlondon/meta-builder": "^1.4.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.46.0",
    "fast-glob": "^3.3.1",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "happy-dom": "^6.0.4",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-prism": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "prismjs": "^1.29.0",
    "rollup": "^2.79.1",
    "typescript": "^4.9.5",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-vue-components": "^0.25.1",
    "vite": "^4.4.8",
    "vite-plugin-md": "^0.21.5",
    "vite-plugin-pages": "^0.31.0",
    "vite-plugin-vue-layouts": "^0.8.0",
    "vite-plugin-windicss": "^1.9.0",
    "vite-ssg": "^0.23.1",
    "vite-ssg-sitemap": "^0.5.1",
    "vitest": "^0.34.1",
    "vue-tsc": "^1.8.8",
    "windicss": "^3.5.6",
    "workbox-window": "^6.6.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@antfu/vue"
    ],
    "globals": {
      "vi": true,
      "vitest": true
    },
    "ignorePatterns": [
      "**/*.d.ts"
    ],
    "rules": {
      "vue/component-definition-name-casing": [
        "error",
        "kebab-case"
      ],
      "vue/html-self-closing": "off"
    }
  },
  "lint-staged": {
    "**/*.{mjs,js,vue}": [
      "eslint --fix"
    ]
  }
}
