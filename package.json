{
  "name": "feryardiant-id",
  "version": "0.2.0",
  "private": true,
  "author": {
    "email": "ferywardiyanto@gmail.com",
    "name": "Fery Wardiyanto"
  },
  "appConfig": {
    "name": "Personal Website",
    "description": "Yet another personal website"
  },
  "scripts": {
    "deploy": "firebase deploy --only functions,hosting",
    "generate": "nuxt generate",
    "serve": "concurrently -n firebase,frontend \"firebase serve --only functions\" \"nuxt\""
  },
  "engines": {
    "node": ">=10"
  },
  "workspaces": [
    "firebase/*"
  ],
  "dependencies": {
    "@nuxtjs/axios": "^5.10.2",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/firebase": "^5.0.7",
    "@nuxtjs/pwa": "^3.0.0-beta.20",
    "feather-icons": "^4.28.0",
    "firebase": "^7.14.2",
    "nuxt": "^2.12.2",
    "qs": "^6.9.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@nuxtjs/eslint-config": "^2.0.2",
    "@nuxtjs/eslint-module": "^2.0.0",
    "@nuxtjs/stylelint-module": "^3.2.2",
    "@nuxtjs/tailwindcss": "^2.0.0",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-nuxt": "^0.5.2",
    "eslint-plugin-prettier": "^3.1.3",
    "firebase-tools": "^8.1.1",
    "frontmatter-markdown-loader": "^3.4.0",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5",
    "stylelint": "^13.3.3",
    "stylelint-config-prettier": "^8.0.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e -V",
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "vuePlugins": {
    "service": [
      "src/build.plugin.js"
    ]
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "@nuxtjs",
      "prettier",
      "prettier/vue",
      "plugin:prettier/recommended",
      "plugin:nuxt/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "ignorePatterns": [
      "dist/",
      "node_modules/",
      "public/",
      "**.old"
    ],
    "rules": {}
  },
  "stylelint": {
    "extends": "stylelint-config-prettier"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,vue,css,scss}": [
      "prettier --write"
    ]
  }
}
