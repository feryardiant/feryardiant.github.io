{
  "name": "@feryardiant/website",
  "version": "0.2.0",
  "private": true,
  "author": {
    "name": "Fery Wardiyanto",
    "email": "ferywardiyanto@gmail.com",
    "url": "https://feryardiant.id"
  },
  "license": "MIT",
  "packageManager": "pnpm@7.5.0",
  "engines": {
    "node": "14.x || 16.x"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-s build:ssg build:rss",
    "build:ssg": "cross-env NODE_ENV=production vite-ssg build",
    "build:rss": "node scripts/feed.mjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install scripts/husky"
  },
  "dependencies": {
    "@gtm-support/vue-gtm": "^1.6.0",
    "@vueuse/core": "^9.13.0",
    "@vueuse/head": "^0.7.13",
    "dayjs": "^1.11.10",
    "nprogress": "^0.2.0",
    "prism-theme-vars": "^0.2.4",
    "qs": "^6.11.2",
    "vue": "^3.3.8",
    "vue-i18n": "^9.6.5",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@antfu/eslint-config-vue": "^0.26.3",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@fontsource/fira-code": "^4.5.13",
    "@fontsource/merriweather-sans": "^4.5.11",
    "@iconify/vue": "^3.2.1",
    "@intlify/vite-plugin-vue-i18n": "^6.0.3",
    "@types/markdown-it": "^12.2.3",
    "@types/markdown-it-link-attributes": "^3.0.4",
    "@types/node": "^20.9.0",
    "@types/nprogress": "^0.2.3",
    "@vitejs/plugin-vue": "^2.3.4",
    "@vue/compiler-sfc": "^3.3.8",
    "@vue/server-renderer": "^3.3.8",
    "@vue/test-utils": "^2.4.1",
    "@yankeeinlondon/meta-builder": "^1.4.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.53.0",
    "fast-glob": "^3.3.2",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "happy-dom": "^6.0.4",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "markdown-it": "^13.0.2",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-prism": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "prismjs": "^1.29.0",
    "rollup": "^2.79.1",
    "typescript": "^4.9.5",
    "unplugin-auto-import": "^0.11.5",
    "unplugin-vue-components": "^0.22.12",
    "vite": "^2.9.16",
    "vite-plugin-md": "^0.20.6",
    "vite-plugin-pages": "^0.25.0",
    "vite-plugin-vue-layouts": "^0.7.0",
    "vite-plugin-windicss": "^1.9.1",
    "vite-ssg": "^0.20.2",
    "vite-ssg-sitemap": "^0.3.2",
    "vitest": "^0.21.1",
    "vue-tsc": "^0.40.13",
    "windicss": "^3.5.6",
    "workbox-window": "^6.6.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@antfu/vue"
    ],
    "globals": {
      "vi": true,
      "vitest": true
    },
    "ignorePatterns": [
      "**/*.d.ts"
    ],
    "rules": {
      "vue/component-definition-name-casing": [
        "error",
        "kebab-case"
      ],
      "vue/html-self-closing": "off"
    }
  },
  "lint-staged": {
    "**/*.{mjs,js,vue}": [
      "eslint --fix"
    ]
  }
}
