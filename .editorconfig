# editorconfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**{file,.yml,.json}]
indent_style = space
indent_size = 2

[source/**.{rb,scss,css,js,json,yml,html}]
indent_style = space
indent_size = 2
