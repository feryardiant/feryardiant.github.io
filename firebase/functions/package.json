{
  "name": "@feryardiant/functions",
  "version": "0.0.0",
  "description": "Cloud Functions for Firebase",
  "author": "Fery Wardiyanto <ferywardiyanto@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "14"
  },
  "dependencies": {
    "@google-cloud/storage": "^5.8.2",
    "@sendgrid/mail": "^7.4",
    "busboy": "^0.3.1",
    "express": "^4.17",
    "firebase-admin": "^9.5",
    "firebase-functions": "^3.6",
    "mailparser": "^3.1.0"
  },
  "devDependencies": {
    "dotenv": "^8.2",
    "eslint": "^7.21",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.20",
    "eslint-plugin-node": "^11.1",
    "eslint-plugin-promise": "^4.2",
    "firebase-functions-test": "^0.2"
  },
  "eslintConfig": {
    "extends": "standard",
    "ignorePatterns": [
      "node_modules/",
      "tests/",
      "**.old"
    ],
    "rules": {
      "no-unused-vars": 0,
      "one-var": 0
    }
  }
}
