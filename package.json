{
  "name": "feryardiant-id",
  "version": "0.2.0",
  "private": true,
  "author": {
    "name": "Fery Wardiyanto",
    "email": "ferywardiyanto@gmail.com",
    "url": "https://feryardiant.id"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "run-s build:ssg build:rss",
    "build:ssg": "cross-env NODE_ENV=production vite-ssg build",
    "build:rss": "node scripts/feed.mjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install scripts/husky"
  },
  "engines": {
    "node": "14.x || 16.x"
  },
  "dependencies": {
    "@gtm-support/vue-gtm": "^1.0.0",
    "@iconify/iconify": "^2.0.0-rc.6",
    "dayjs": "^1.10.4",
    "feather-icons": "^4.28.0",
    "nprogress": "^0.2.0",
    "prism-theme-vars": "^0.2.2",
    "qs": "^6.10.1",
    "vue": "^3.2.26",
    "vue-router": "^4.0.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.0",
    "@feryardiant/commitlint-config": "^0.2",
    "@feryardiant/eslint-config": "^0.1.0",
    "@iconify/json": "^2.1.25",
    "@types/markdown-it": "^12.2.3",
    "@vitejs/plugin-vue": "^2.0.1",
    "@vue/compiler-sfc": "^3.0.11",
    "@vue/server-renderer": "^3.2.26",
    "@vueuse/core": "^8.2",
    "@vueuse/head": "^0.7",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.2.0",
    "fast-glob": "^3.2.11",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.2",
    "husky": "^7.0",
    "lint-staged": "^12.1",
    "markdown-it": "^12.3.0",
    "markdown-it-anchor": "^8.3.0",
    "markdown-it-link-attributes": "^4.0.0",
    "markdown-it-prism": "^2.1.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4",
    "postcss-nested": "^5.0",
    "prettier": "^2.3.2",
    "prismjs": "^1.25",
    "unplugin-icons": "^0.13.3",
    "unplugin-vue-components": "^0.18.5",
    "vite": "^2.9.1",
    "vite-plugin-md": "^0.11",
    "vite-plugin-pages": "^0.21",
    "vite-plugin-purge-icons": "^0.8",
    "vite-plugin-vue-layouts": "^0.6",
    "vite-plugin-windicss": "^1.4",
    "vite-ssg": "^0.19.0",
    "windicss": "^3.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "commitlint": {
    "extends": [
      "@feryardiant/commitlint-config"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@feryardiant/eslint-config",
      "plugin:vue/vue3-recommended"
    ],
    "ignorePatterns": [
      "dist/",
      "node_modules/",
      "public/",
      "*.old/"
    ],
    "overrides": [
      {
        "files": [
          "*.vue"
        ],
        "parser": "vue-eslint-parser"
      }
    ],
    "rules": {
      "vue/max-attributes-per-line": [
        "warn",
        {
          "singleline": 5
        }
      ],
      "vue/singleline-html-element-content-newline": "off",
      "vue/html-self-closing": "off",
      "vue/no-setup-props-destructure": "off",
      "vue/no-v-html": "off",
      "no-undef": "off",
      "no-unused-vars": "off"
    }
  },
  "lint-staged": {
    "**/*.{mjs,js,vue}": [
      "eslint --fix"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-nested": {}
    }
  }
}
